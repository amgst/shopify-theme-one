{% comment %}
  Product Showcase Hero Section
{% endcomment %}

<section
  class="hero-product"
  style="background: linear-gradient(135deg, {{ section.settings.bg_color_start }} 0%, {{ section.settings.bg_color_end }} 100%);"
>
  <div class="hero-product__container">
    <div class="hero-product__content">
      <div class="hero-product__image-section">
        <div class="hero-product__image-wrapper">
          {% if section.settings.product_image != blank %}
            {{
              section.settings.product_image
              | image_url: width: 800
              | image_tag: loading: 'lazy', class: 'hero-product__image', alt: section.settings.product_image.alt
              | default: section.settings.product_name
            }}
          {% else %}
            <div class="hero-product__image-placeholder">
              <div class="hero-product__placeholder-content">
                <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                  <circle cx="8.5" cy="8.5" r="1.5"/>
                  <polyline points="21,15 16,10 5,21"/>
                </svg>
                <p>Add a product image</p>
              </div>
            </div>
          {% endif %}

          {% if section.settings.show_floating_cards %}
            <div class="hero-product__floating-card hero-product__floating-card--top">
              <div class="hero-product__card-label">{{ section.settings.card_top_label | default: 'New Arrival' }}</div>
              <div class="hero-product__card-text">
                {{ section.settings.card_top_text | default: 'Premium Collection' }}
              </div>
            </div>

            <div
              class="hero-product__floating-card hero-product__floating-card--bottom"
              style="background-color: {{ section.settings.accent_color }}; color: {{ section.settings.accent_text_color }};"
            >
              <div class="hero-product__card-label">
                {{ section.settings.card_bottom_label | default: 'Starting at' }}
              </div>
              <div class="hero-product__card-price">{{ section.settings.price | default: '$129' }}</div>
            </div>
          {% endif %}
        </div>

        <div class="hero-product__background-elements">
          <div
            class="hero-product__bg-circle hero-product__bg-circle--1"
            style="background-color: {{ section.settings.bg_accent_1 }};"
          ></div>
          <div
            class="hero-product__bg-circle hero-product__bg-circle--2"
            style="background-color: {{ section.settings.bg_accent_2 }};"
          ></div>
        </div>
      </div>

      <div class="hero-product__details-section">
        {% if section.blocks.size > 0 %}
          <div class="hero-product__badges">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'badge' %}
                  <span
                    class="hero-product__badge hero-product__badge--{{ block.settings.style }}"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.text | escape }}
                  </span>
              {% endcase %}
            {% endfor %}
          </div>
        {% endif %}

        {% if section.settings.product_name != blank %}
          <h1 class="hero-product__title" style="color: {{ section.settings.text_color }};">
            {{ section.settings.product_name | newline_to_br }}
          </h1>
        {% endif %}

        {% if section.settings.description != blank %}
          <p class="hero-product__description" style="color: {{ section.settings.text_color }};">
            {{ section.settings.description | escape }}
          </p>
        {% endif %}

        <div class="hero-product__pricing">
          <div class="hero-product__price-main" style="color: {{ section.settings.text_color }};">
            {{ section.settings.price_range | default: '$129 - $299' }}
          </div>
          {% if section.settings.original_price != blank %}
            <div class="hero-product__price-original">
              {{ section.settings.original_price | escape }}
            </div>
          {% endif %}
          {% if section.settings.discount_text != blank %}
            <div class="hero-product__discount">
              {{ section.settings.discount_text | escape }}
            </div>
          {% endif %}
        </div>

        <div class="hero-product__actions">
          {% if section.settings.button_primary_text != blank %}
            <a
              href="{{ section.settings.button_primary_link | default: '#' }}"
              class="hero-product__button hero-product__button--primary"
              style="background-color: {{ section.settings.primary_button_bg }}; color: {{ section.settings.primary_button_text }};"
            >
              {{ section.settings.button_primary_text | escape }}
            </a>
          {% endif %}

          {% if section.settings.button_secondary_text != blank %}
            <a
              href="{{ section.settings.button_secondary_link | default: '#' }}"
              class="hero-product__button hero-product__button--secondary"
              style="border-color: {{ section.settings.secondary_button_border }}; color: {{ section.settings.secondary_button_text }};"
            >
              {{ section.settings.button_secondary_text | escape }}
            </a>
          {% endif %}
        </div>

        {% if section.settings.show_stats %}
          <div class="hero-product__stats">
            <div class="hero-product__stat">
              <div class="hero-product__stat-value" style="color: {{ section.settings.text_color }};">
                {{ section.settings.rating | default: '4.8â˜…' }}
              </div>
              <div class="hero-product__stat-label" style="color: {{ section.settings.text_color }};">
                {{ section.settings.rating_label | default: 'Customer Rating' }}
              </div>
            </div>
            <div class="hero-product__stat">
              <div class="hero-product__stat-value" style="color: {{ section.settings.text_color }};">
                {{ section.settings.reviews | default: '2K+' }}
              </div>
              <div class="hero-product__stat-label" style="color: {{ section.settings.text_color }};">
                {{ section.settings.reviews_label | default: 'Reviews' }}
              </div>
            </div>
            <div class="hero-product__stat">
              <div class="hero-product__stat-value" style="color: {{ section.settings.text_color }};">
                {{ section.settings.satisfaction | default: '99%' }}
              </div>
              <div class="hero-product__stat-label" style="color: {{ section.settings.text_color }};">
                {{ section.settings.satisfaction_label | default: 'Satisfaction' }}
              </div>
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .hero-product {
    min-height: {{ section.settings.section_height }}vh;
    padding: 4rem 0;
  }

  .hero-product__container {
    max-width: 96rem;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .hero-product__content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: center;
    min-height: 60vh;
  }

  .hero-product__image-section {
    position: relative;
    order: 2;
  }

  .hero-product__image-wrapper {
    position: relative;
    aspect-ratio: 1;
    max-width: 28rem;
    margin: 0 auto;
  }

  .hero-product__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 1rem;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }

  .hero-product__image-placeholder {
    width: 100%;
    height: 100%;
    background-color: #f3f4f6;
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }

  .hero-product__placeholder-content {
    text-align: center;
    color: #9ca3af;
  }

  .hero-product__placeholder-content svg {
    margin: 0 auto 1rem;
  }

  .hero-product__floating-card {
    position: absolute;
    background: white;
    padding: 1.5rem;
    border-radius: 0.75rem;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(0, 0, 0, 0.05);
    min-width: 120px;
  }

  .hero-product__floating-card--top {
    top: -1rem;
    left: -1rem;
  }

  .hero-product__floating-card--bottom {
    bottom: -1rem;
    right: -1rem;
  }

  .hero-product__card-label {
    font-size: 0.875rem;
    opacity: 0.8;
    margin-bottom: 0.25rem;
  }

  .hero-product__card-text {
    font-size: 1.125rem;
    font-weight: 500;
  }

  .hero-product__card-price {
    font-size: 1.5rem;
    font-weight: 600;
  }

  .hero-product__background-elements {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: -1;
  }

  .hero-product__bg-circle {
    position: absolute;
    border-radius: 50%;
  }

  .hero-product__bg-circle--1 {
    top: -2rem;
    right: -2rem;
    width: 8rem;
    height: 8rem;
  }

  .hero-product__bg-circle--2 {
    bottom: -2rem;
    left: -2rem;
    width: 6rem;
    height: 6rem;
  }

  .hero-product__details-section {
    order: 1;
  }

  .hero-product__badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .hero-product__badge {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .hero-product__badge--primary {
    background-color: rgba(59, 130, 246, 0.1);
    color: #1d4ed8;
  }

  .hero-product__badge--secondary {
    background-color: rgba(156, 163, 175, 0.1);
    color: #374151;
  }

  .hero-product__badge--accent {
    background-color: rgba(168, 85, 247, 0.1);
    color: #7c3aed;
  }

  .hero-product__title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    line-height: 1.2;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .hero-product__description {
    font-size: 1.125rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    opacity: 0.8;
  }

  .hero-product__pricing {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .hero-product__price-main {
    font-size: 1.875rem;
    font-weight: 600;
  }

  .hero-product__price-original {
    font-size: 0.875rem;
    color: #9ca3af;
    text-decoration: line-through;
  }

  .hero-product__discount {
    background-color: #fef2f2;
    color: #dc2626;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .hero-product__actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .hero-product__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: .5rem 2rem;
    border-radius: 0.5rem;
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    text-align: center;
  }

  .hero-product__button--primary {
    border: none;
  }

  .hero-product__button--primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
  }

  .hero-product__button--secondary {
    background: transparent;
    border: 2px solid;
  }

  .hero-product__button--secondary:hover {
    background-color: rgba(0,0,0,0.05);
  }

  .hero-product__stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    text-align: center;
    padding-top: 1rem; max-width:450px;
  }

  .hero-product__stat-value {
    font-size: 1.5rem;
    font-weight: 600;
    line-height: 1;
  }

  .hero-product__stat-label {
    font-size: 0.875rem;
    opacity: 0.8;
    margin-top: 0.25rem;
  }

  @media (min-width: 1024px) {
    .hero-product__content {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
    }

    .hero-product__image-section {
      order: 1;
    }

    .hero-product__details-section {
      order: 2;
    }

    .hero-product__actions {
      flex-direction: row;
    }

    .hero-product__floating-card--top {
      top: -1rem;
      left: -2rem;
    }

    .hero-product__floating-card--bottom {
      bottom: -1rem;
      right: -2rem;
    }
  }

  @media (max-width: 768px) {
    .hero-product__floating-card {
      display: none;
    }
  }
</style>

