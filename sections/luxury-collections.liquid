{% comment %}
  Luxury Collections Section
{% endcomment %}

<section
  class="luxury-collections"
  style="
    padding: {{ section.settings.section_padding_y }}px {{ section.settings.section_padding_x }}px;
    background: {% if section.settings.bg_type == 'gradient' %}linear-gradient({{ section.settings.gradient_direction }}, {{ section.settings.bg_color_start }} 0%, {{ section.settings.bg_color_end }} 100%){% else %}{{ section.settings.bg_color_solid }}{% endif %};
  "
>
  <div
    class="luxury-collections__container"
    style="max-width: {{ section.settings.container_max_width }}px;"
  >
    {% if section.settings.show_header %}
      <div
        class="luxury-collections__header"
        style="
          text-align: {{ section.settings.header_alignment }};
          margin-bottom: {{ section.settings.header_margin_bottom }}px;
        "
      >
        {% if section.settings.eyebrow_text != blank %}
          <div
            class="luxury-collections__eyebrow"
            style="
              color: {{ section.settings.eyebrow_color }};
              font-size: {{ section.settings.eyebrow_size }}px;
              font-weight: {{ section.settings.eyebrow_weight }};
              letter-spacing: {{ section.settings.eyebrow_spacing }}em;
              text-transform: {{ section.settings.eyebrow_transform }};
              margin-bottom: {{ section.settings.eyebrow_margin }}px;
            "
          >
            {{ section.settings.eyebrow_text | escape }}
          </div>
        {% endif %}

        {% if section.settings.heading != blank %}
          <{{ section.settings.heading_tag }}
            class="luxury-collections__heading"
            style="
              color: {{ section.settings.heading_color }};
              font-size: {{ section.settings.heading_size }}px;
              font-weight: {{ section.settings.heading_weight }};
              line-height: {{ section.settings.heading_line_height }};
              letter-spacing: {{ section.settings.heading_spacing }}em;
              text-transform: {{ section.settings.heading_transform }};
              margin-bottom: {{ section.settings.heading_margin }}px;
            "
          >
            {{ section.settings.heading | escape }}
          </{{ section.settings.heading_tag }}>
        {% endif %}

        {% if section.settings.description != blank %}
          <div
            class="luxury-collections__description"
            style="
              color: {{ section.settings.description_color }};
              font-size: {{ section.settings.description_size }}px;
              font-weight: {{ section.settings.description_weight }};
              line-height: {{ section.settings.description_line_height }};
              max-width: {{ section.settings.description_max_width }}px;
              margin: 0 {% if section.settings.header_alignment == 'center' %}auto{% else %}0{% endif %};
            "
          >
            {{ section.settings.description | escape }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    <div
      class="luxury-collections__grid"
      style="
        display: grid;
        grid-template-columns: repeat({{ section.settings.grid_columns_mobile }}, 1fr);
        gap: {{ section.settings.grid_gap }}px;
      "
    >
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'collection' %}
            <div
              class="luxury-collections__item"
              {{ block.shopify_attributes }}
              style="
                grid-column: {{ block.settings.grid_span_mobile }};
                position: relative;
                border-radius: {{ section.settings.item_border_radius }}px;
                overflow: hidden;
                background: {{ block.settings.item_bg_color }};
                border: {{ section.settings.item_border_width }}px solid {{ section.settings.item_border_color }};
                box-shadow: {{ section.settings.item_shadow }};
              "
            >
              {% if block.settings.image != blank %}
                <div
                  class="luxury-collections__image-wrapper"
                  style="
                    aspect-ratio: {{ block.settings.image_aspect_ratio }};
                    position: relative;
                    overflow: hidden;
                  "
                >
                  {{
                    block.settings.image
                    | image_url: width: 800
                    | image_tag: loading: 'lazy', class: 'luxury-collections__image', alt: block.settings.image.alt
                    | default: block.settings.title,
                      style: 'width: 100%; height: 100%; object-fit: cover; transition: transform '
                    | append: section.settings.image_hover_duration
                    | append: 'ms ease;'
                  }}

                  {% if block.settings.show_overlay %}
                    <div
                      class="luxury-collections__overlay"
                      style="
                        position: absolute;
                        inset: 0;
                        background: {% if block.settings.overlay_type == 'solid' %}{{ block.settings.overlay_color }}{% else %}linear-gradient({{ block.settings.overlay_direction }}, {{ block.settings.overlay_color_start }} 0%, {{ block.settings.overlay_color_end }} 100%){% endif %};
                        opacity: {{ block.settings.overlay_opacity }};
                        transition: opacity {{ section.settings.overlay_hover_duration }}ms ease;
                      "
                    ></div>
                  {% endif %}
                </div>
              {% else %}
                <div
                  class="luxury-collections__image-placeholder"
                  style="
                    aspect-ratio: {{ block.settings.image_aspect_ratio }};
                    background-color: #f3f4f6;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    color: #9ca3af;
                  "
                >
                  <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                    <circle cx="8.5" cy="8.5" r="1.5"/>
                    <polyline points="21,15 16,10 5,21"/>
                  </svg>
                </div>
              {% endif %}

              <div
                class="luxury-collections__content"
              >
                {% if block.settings.badge_text != blank %}
                  <div
                    class="luxury-collections__badge"
                    style="
                      background: {{ block.settings.badge_bg_color }};
                      color: {{ block.settings.badge_text_color }};
                      padding: {{ block.settings.badge_padding_y }}px {{ block.settings.badge_padding_x }}px;
                      border-radius: {{ block.settings.badge_border_radius }}px;
                      font-size: {{ block.settings.badge_font_size }}px;
                      font-weight: {{ block.settings.badge_font_weight }};
                      text-transform: {{ block.settings.badge_text_transform }};
                      letter-spacing: {{ block.settings.badge_letter_spacing }}em;
                      margin-bottom: {{ block.settings.badge_margin }}px;
                      display: inline-block;
                    "
                  >
                    {{ block.settings.badge_text | escape }}
                  </div>
                {% endif %}

                {% if block.settings.title != blank %}
                  <{{ block.settings.title_tag }}
                    class="luxury-collections__title"
                    style="
                      color: {{ block.settings.title_color }};
                      font-size: {{ block.settings.title_size }}px;
                      font-weight: {{ block.settings.title_weight }};
                      line-height: {{ block.settings.title_line_height }};
                      letter-spacing: {{ block.settings.title_spacing }}em;
                      text-transform: {{ block.settings.title_transform }};
                      margin-bottom: {{ block.settings.title_margin }}px;
                    "
                  >
                    {{ block.settings.title | escape }}
                  </{{ block.settings.title_tag }}>
                {% endif %}

                {% if block.settings.subtitle != blank %}
                  <div
                    class="luxury-collections__subtitle"
                    style="
                      color: {{ block.settings.subtitle_color }};
                      font-size: {{ block.settings.subtitle_size }}px;
                      font-weight: {{ block.settings.subtitle_weight }};
                      line-height: {{ block.settings.subtitle_line_height }};
                      margin-bottom: {{ block.settings.subtitle_margin }}px;
                    "
                  >
                    {{ block.settings.subtitle | escape }}
                  </div>
                {% endif %}

                {% if block.settings.description != blank %}
                  <div
                    class="luxury-collections__item-description"
                    style="
                      color: {{ block.settings.description_color }};
                      font-size: {{ block.settings.description_size }}px;
                      font-weight: {{ block.settings.description_weight }};
                      line-height: {{ block.settings.description_line_height }};
                      margin-bottom: {{ block.settings.description_margin }}px;
                    "
                  >
                    {{ block.settings.description | escape }}
                  </div>
                {% endif %}

                {% if block.settings.price_text != blank %}
                  <div
                    class="luxury-collections__price"
                    style="
                      color: {{ block.settings.price_color }};
                      font-size: {{ block.settings.price_size }}px;
                      font-weight: {{ block.settings.price_weight }};
                      margin-bottom: {{ block.settings.price_margin }}px;
                    "
                  >
                    {{ block.settings.price_text | escape }}
                  </div>
                {% endif %}

                {% if block.settings.show_button and block.settings.button_text != blank %}
                  <a
                    href="{{ block.settings.button_link | default: '#' }}"
                    class="luxury-collections__button"
                    style="
                      background: {{ block.settings.button_bg_type == 'solid' ? block.settings.button_bg_color : 'linear-gradient(135deg, ' | append: block.settings.button_bg_start | append: ' 0%, ' | append: block.settings.button_bg_end | append: ' 100%)' }};
                      color: {{ block.settings.button_text_color }};
                      border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
                      border-radius: {{ block.settings.button_border_radius }}px;
                      padding: {{ block.settings.button_padding_y }}px {{ block.settings.button_padding_x }}px;
                      font-size: {{ block.settings.button_font_size }}px;
                      font-weight: {{ block.settings.button_font_weight }};
                      letter-spacing: {{ block.settings.button_letter_spacing }}em;
                      text-transform: {{ block.settings.button_text_transform }};
                      text-decoration: none;
                      display: inline-block;
                      transition: all {{ section.settings.button_hover_duration }}ms ease;
                    "
                  >
                    {{ block.settings.button_text | escape }}
                  </a>
                {% endif %}
              </div>

              {% if block.settings.link != blank and block.settings.make_clickable %}
                <a
                  href="{{ block.settings.link }}"
                  style="position: absolute; inset: 0; z-index: 10;"
                  aria-label="{{ block.settings.title | escape }}"
                ></a>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    {% if section.settings.show_view_all and section.settings.view_all_text != blank %}
      <div
        class="luxury-collections__footer"
        style="
          text-align: {{ section.settings.view_all_alignment }};
          margin-top: {{ section.settings.view_all_margin_top }}px;
        "
      >
        <a
          href="{{ section.settings.view_all_link | default: '/collections' }}"
          class="luxury-collections__view-all"
          style="
            background: {{ section.settings.view_all_bg_type == 'solid' ? section.settings.view_all_bg_color : 'linear-gradient(135deg, ' | append: section.settings.view_all_bg_start | append: ' 0%, ' | append: section.settings.view_all_bg_end | append: ' 100%)' }};
            color: {{ section.settings.view_all_text_color }};
            border: {{ section.settings.view_all_border_width }}px solid {{ section.settings.view_all_border_color }};
            border-radius: {{ section.settings.view_all_border_radius }}px;
            padding: {{ section.settings.view_all_padding_y }}px {{ section.settings.view_all_padding_x }}px;
            font-size: {{ section.settings.view_all_font_size }}px;
            font-weight: {{ section.settings.view_all_font_weight }};
            letter-spacing: {{ section.settings.view_all_letter_spacing }}em;
            text-transform: {{ section.settings.view_all_text_transform }};
            text-decoration: none;
            display: inline-block;
            transition: all {{ section.settings.view_all_hover_duration }}ms ease;
          "
        >
          {{ section.settings.view_all_text | escape }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .luxury-collections__container {
    margin: 0 auto;
  }

  .luxury-collections__image:hover {
    transform: {{ section.settings.image_hover_transform }};
  }

  .luxury-collections__item:hover .luxury-collections__overlay {
    opacity: {{ section.settings.overlay_hover_opacity }};
  }

  .luxury-collections__button:hover {
    transform: {{ section.settings.button_hover_transform }};
    box-shadow: {{ section.settings.button_hover_shadow }};
  }

  .luxury-collections__view-all:hover {
    transform: {{ section.settings.view_all_hover_transform }};
    box-shadow: {{ section.settings.view_all_hover_shadow }};
  }

  @media (min-width: 768px) {
    .luxury-collections__grid {
      grid-template-columns: repeat({{ section.settings.grid_columns_tablet }}, 1fr) !important;
    }

    .luxury-collections__item {
      grid-column: span {{ section.settings.item_span_tablet }} !important;
    }
  }

  @media (min-width: 1024px) {
    .luxury-collections__grid {
      grid-template-columns: repeat({{ section.settings.grid_columns_desktop }}, 1fr) !important;
    }

    .luxury-collections__item {
      grid-column: span {{ section.settings.item_span_desktop }} !important;
    }
  }
</style>

