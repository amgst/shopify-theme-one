<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    {%- if section.settings.title != blank -%}
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          {{ section.settings.title }}
        </h2>
        {%- if section.settings.description != blank -%}
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            {{ section.settings.description }}
          </p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-{{ section.settings.columns_desktop }} gap-6">
      {%- for block in section.blocks -%}
        <div class="group relative overflow-hidden rounded-lg bg-white shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
            <div class="aspect-w-16 aspect-h-12 overflow-hidden">
              <img
                src="{{ block.settings.image | image_url: width: 600 }}"
                srcset="{{ block.settings.image | image_url: width: 300 }} 300w,
                        {{ block.settings.image | image_url: width: 600 }} 600w,
                        {{ block.settings.image | image_url: width: 900 }} 900w"
                sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
                alt="{{ block.settings.image.alt | escape }}"
                class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-500"
                loading="lazy"
              >
            </div>
          {%- else -%}
            <div class="w-full h-64 bg-gradient-to-br from-gray-200 to-gray-300 flex items-center justify-center">
              <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
          {%- endif -%}

          <div class="p-6">
            {%- if block.settings.title != blank -%}
              <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors duration-300">
                {{ block.settings.title }}
              </h3>
            {%- endif -%}

            {%- if block.settings.description != blank -%}
              <p class="text-gray-600 mb-4 line-clamp-3">
                {{ block.settings.description }}
              </p>
            {%- endif -%}

            {%- if block.settings.button_label != blank -%}
              <a
                {% if block.settings.button_link == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ block.settings.button_link }}"
                {% endif %}
                class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium transition-colors duration-300"
              >
                {{ block.settings.button_label | escape }}
                <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            {%- endif -%}
          </div>

          {%- if block.settings.overlay_text != blank -%}
            <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <span class="text-white text-lg font-semibold text-center px-4">
                {{ block.settings.overlay_text }}
              </span>
            </div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>

    {%- if section.settings.show_view_all and section.settings.view_all_label != blank -%}
      <div class="text-center mt-12">
        <a
          {% if section.settings.view_all_link == blank %}
            role="link" aria-disabled="true"
          {% else %}
            href="{{ section.settings.view_all_link }}"
          {% endif %}
          class="inline-flex items-center justify-center px-8 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors duration-300"
        >
          {{ section.settings.view_all_label | escape }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "WB Category Grid",
  "tag": "section",
  "class": "wb-category-grid",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Shop by Category"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Section Description",
      "default": "Discover our curated collections"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Columns on Desktop",
      "default": 3
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show View All Button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_label",
      "label": "View All Button Label",
      "default": "View All Categories"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View All Button Link"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Category Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Category Title",
          "default": "Category Name"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Category Description",
          "default": "Explore our amazing collection"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "overlay_text",
          "label": "Hover Overlay Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "WB Category Grid",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "title": "Women's Fashion",
            "description": "Discover the latest trends in women's clothing",
            "button_label": "Shop Women"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Men's Fashion",
            "description": "Explore our men's collection",
            "button_label": "Shop Men"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Accessories",
            "description": "Complete your look with our accessories",
            "button_label": "Shop Accessories"
          }
        }
      ]
    }
  ]
}
{% endschema %}