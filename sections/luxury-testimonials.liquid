{% comment %}
  Luxury Testimonials Section
{% endcomment %}

<section
  class="luxury-testimonials"
  style="
    padding: {{ section.settings.section_padding_y }}px {{ section.settings.section_padding_x }}px;
    background: {% if section.settings.bg_type == 'gradient' %}linear-gradient({{ section.settings.gradient_direction }}, {{ section.settings.bg_color_start }} 0%, {{ section.settings.bg_color_end }} 100%){% else %}{{ section.settings.bg_color_solid }}{% endif %};
  "
>
  <div
    class="luxury-testimonials__container"
    style="max-width: {{ section.settings.container_max_width }}px;"
  >
    {% if section.settings.show_header %}
      <div
        class="luxury-testimonials__header"
        style="
          text-align: {{ section.settings.header_alignment }};
          margin-bottom: {{ section.settings.header_margin_bottom }}px;
        "
      >
        {% if section.settings.eyebrow_text != blank %}
          <div
            class="luxury-testimonials__eyebrow"
            style="
              color: {{ section.settings.eyebrow_color }};
              font-size: {{ section.settings.eyebrow_size }}px;
              font-weight: {{ section.settings.eyebrow_weight }};
              letter-spacing: {{ section.settings.eyebrow_spacing }}em;
              text-transform: {{ section.settings.eyebrow_transform }};
              margin-bottom: {{ section.settings.eyebrow_margin }}px;
            "
          >
            {{ section.settings.eyebrow_text | escape }}
          </div>
        {% endif %}

        {% if section.settings.heading != blank %}
          <{{ section.settings.heading_tag }}
            class="luxury-testimonials__heading"
            style="
              color: {{ section.settings.heading_color }};
              font-size: {{ section.settings.heading_size }}px;
              font-weight: {{ section.settings.heading_weight }};
              line-height: {{ section.settings.heading_line_height }};
              letter-spacing: {{ section.settings.heading_spacing }}em;
              text-transform: {{ section.settings.heading_transform }};
              margin-bottom: {{ section.settings.heading_margin }}px;
            "
          >
            {{ section.settings.heading | escape }}
          </{{ section.settings.heading_tag }}>
        {% endif %}

        {% if section.settings.description != blank %}
          <div
            class="luxury-testimonials__description"
            style="
              color: {{ section.settings.description_color }};
              font-size: {{ section.settings.description_size }}px;
              font-weight: {{ section.settings.description_weight }};
              line-height: {{ section.settings.description_line_height }};
              max-width: {{ section.settings.description_max_width }}px;
              margin: 0 {{ section.settings.header_alignment == 'center' ? 'auto' : '0' }};
            "
          >
            {{ section.settings.description | escape }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    <div
      class="luxury-testimonials__grid"
      style="
        display: grid;
        grid-template-columns: repeat({{ section.settings.grid_columns_mobile }}, 1fr);
        gap: {{ section.settings.grid_gap }}px;
      "
    >
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'testimonial' %}
            <div
              class="luxury-testimonials__item"
              {{ block.shopify_attributes }}
              style="
                background: {{ block.settings.item_bg_type == 'solid' ? block.settings.item_bg_color : 'linear-gradient(' | append: block.settings.item_bg_direction | append: ', ' | append: block.settings.item_bg_start | append: ' 0%, ' | append: block.settings.item_bg_end | append: ' 100%)' }};
                border: {{ section.settings.item_border_width }}px solid {{ section.settings.item_border_color }};
                border-radius: {{ section.settings.item_border_radius }}px;
                padding: {{ block.settings.item_padding }}px;
                box-shadow: {{ section.settings.item_shadow }};
                text-align: {{ block.settings.content_alignment }};
                position: relative;
                overflow: hidden;
              "
            >
              {% if block.settings.show_quote_icon %}
                <div
                  class="luxury-testimonials__quote-icon"
                  style="
                    color: {{ block.settings.quote_icon_color }};
                    font-size: {{ block.settings.quote_icon_size }}px;
                    margin-bottom: {{ block.settings.quote_icon_margin }}px;
                    opacity: {{ block.settings.quote_icon_opacity }};
                    position: {{ block.settings.quote_icon_position }};
                    {{ block.settings.quote_icon_position == 'absolute' ? 'top: ' | append: block.settings.quote_icon_top | append: 'px; right: ' | append: block.settings.quote_icon_right | append: 'px;' : '' }}
                  "
                >
                  {% if block.settings.custom_quote_icon != blank %}
                    {{ block.settings.custom_quote_icon }}
                  {% else %}
                    <svg width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="none">
                      <path d="M3 21c3 0 7-1 7-8V5c0-1.25-.756-2.017-2-2H4c-1.25 0-2 .75-2 1.972V11c0 1.25.75 2 2 2 1 0 1 0 1 1v1c0 1-1 2-2 2s-1 .008-1 1.031V20c0 1 0 1 1 1z" fill="currentColor"/>
                      <path d="M15 21c3 0 7-1 7-8V5c0-1.25-.757-2.017-2-2h-4c-1.25 0-2 .75-2 1.972V11c0 1.25.75 2 2 2h.75c0 2.25.25 4-2.75 4v3c0 1 0 1 1 1z" fill="currentColor"/>
                    </svg>
                  {% endif %}
                </div>
              {% endif %}

              {% if block.settings.testimonial_text != blank %}
                <blockquote
                  class="luxury-testimonials__quote"
                  style="
                    color: {{ block.settings.quote_color }};
                    font-size: {{ block.settings.quote_size }}px;
                    font-weight: {{ block.settings.quote_weight }};
                    line-height: {{ block.settings.quote_line_height }};
                    font-style: {{ block.settings.quote_style }};
                    margin-bottom: {{ block.settings.quote_margin }}px;
                  "
                >
                  {{ block.settings.testimonial_text | escape }}
                </blockquote>
              {% endif %}

              {% if block.settings.show_rating and block.settings.rating > 0 %}
                <div
                  class="luxury-testimonials__rating"
                  style="
                    margin-bottom: {{ block.settings.rating_margin }}px;
                    display: flex;
                    justify-content: {{ block.settings.content_alignment == 'center' ? 'center' : block.settings.content_alignment == 'right' ? 'flex-end' : 'flex-start' }};
                    gap: {{ block.settings.rating_gap }}px;
                  "
                >
                  {% for i in (1..5) %}
                    <span
                      style="
                        color: {{ i <= block.settings.rating ? block.settings.star_color_filled : block.settings.star_color_empty }};
                        font-size: {{ block.settings.star_size }}px;
                      "
                    >
                      {% if block.settings.star_style == 'filled' %}
                        ★
                      {% else %}
                        {% if i <= block.settings.rating %}★{% else %}☆{% endif %}
                      {% endif %}
                    </span>
                  {% endfor %}
                </div>
              {% endif %}

              <div
                class="luxury-testimonials__author"
                style="
                  display: flex;
                  flex-direction: {{ block.settings.author_direction }};
                  align-items: {{ block.settings.author_alignment }};
                  justify-content: {{ block.settings.content_alignment == 'center' ? 'center' : block.settings.content_alignment == 'right' ? 'flex-end' : 'flex-start' }};
                  gap: {{ block.settings.author_gap }}px;
                "
              >
                {% if block.settings.author_image != blank %}
                  <div
                    class="luxury-testimonials__author-image"
                    style="flex-shrink: 0;"
                  >
                    {{
                      block.settings.author_image
                      | image_url: width: block.settings.author_image_size
                      | image_tag: loading: 'lazy', alt: block.settings.author_image.alt
                      | default: block.settings.author_name, style: 'width: '
                      | append: block.settings.author_image_size
                      | append: 'px; height: '
                      | append: block.settings.author_image_size
                      | append: 'px; object-fit: cover; border-radius: '
                      | append: block.settings.author_image_border_radius
                      | append: 'px; border: '
                      | append: block.settings.author_image_border_width
                      | append: 'px solid '
                      | append: block.settings.author_image_border_color
                      | append: ';'
                    }}
                  </div>
                {% endif %}

                <div class="luxury-testimonials__author-info">
                  {% if block.settings.author_name != blank %}
                    <div
                      class="luxury-testimonials__author-name"
                      style="
                        color: {{ block.settings.author_name_color }};
                        font-size: {{ block.settings.author_name_size }}px;
                        font-weight: {{ block.settings.author_name_weight }};
                        line-height: {{ block.settings.author_name_line_height }};
                        margin-bottom: {{ block.settings.author_name_margin }}px;
                      "
                    >
                      {{ block.settings.author_name | escape }}
                    </div>
                  {% endif %}

                  {% if block.settings.author_title != blank %}
                    <div
                      class="luxury-testimonials__author-title"
                      style="
                        color: {{ block.settings.author_title_color }};
                        font-size: {{ block.settings.author_title_size }}px;
                        font-weight: {{ block.settings.author_title_weight }};
                        line-height: {{ block.settings.author_title_line_height }};
                        font-style: {{ block.settings.author_title_style }};
                      "
                    >
                      {{ block.settings.author_title | escape }}
                    </div>
                  {% endif %}

                  {% if block.settings.author_location != blank %}
                    <div
                      class="luxury-testimonials__author-location"
                      style="
                        color: {{ block.settings.author_location_color }};
                        font-size: {{ block.settings.author_location_size }}px;
                        font-weight: {{ block.settings.author_location_weight }};
                        margin-top: {{ block.settings.author_location_margin }}px;
                      "
                    >
                      {{ block.settings.author_location | escape }}
                    </div>
                  {% endif %}
                </div>
              </div>

              {% if block.settings.show_decorative_element %}
                <div
                  class="luxury-testimonials__decorative"
                  style="
                    position: absolute;
                    {{ block.settings.decorative_position }}: {{ block.settings.decorative_offset }}px;
                    width: {{ block.settings.decorative_size }}px;
                    height: {{ block.settings.decorative_size }}px;
                    background: {{ block.settings.decorative_color }};
                    border-radius: {{ block.settings.decorative_type == 'circle' ? '50%' : block.settings.decorative_border_radius | append: 'px' }};
                    opacity: {{ block.settings.decorative_opacity }};
                    z-index: -1;
                  "
                ></div>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    {% if section.settings.show_trust_indicators %}
      <div
        class="luxury-testimonials__trust-indicators"
        style="
          margin-top: {{ section.settings.trust_indicators_margin_top }}px;
          text-align: {{ section.settings.trust_indicators_alignment }};
          padding: {{ section.settings.trust_indicators_padding }}px;
          background: {{ section.settings.trust_indicators_bg_color }};
          border-radius: {{ section.settings.trust_indicators_border_radius }}px;
        "
      >
        {% if section.settings.trust_indicators_title != blank %}
          <div
            class="luxury-testimonials__trust-title"
            style="
              color: {{ section.settings.trust_indicators_title_color }};
              font-size: {{ section.settings.trust_indicators_title_size }}px;
              font-weight: {{ section.settings.trust_indicators_title_weight }};
              margin-bottom: {{ section.settings.trust_indicators_title_margin }}px;
            "
          >
            {{ section.settings.trust_indicators_title | escape }}
          </div>
        {% endif %}

        <div
          class="luxury-testimonials__trust-stats"
          style="
            display: flex;
            flex-direction: {{ section.settings.trust_stats_direction }};
            align-items: center;
            justify-content: {{ section.settings.trust_indicators_alignment == 'center' ? 'center' : section.settings.trust_indicators_alignment == 'right' ? 'flex-end' : 'flex-start' }};
            gap: {{ section.settings.trust_stats_gap }}px;
            flex-wrap: wrap;
          "
        >
          {% if section.settings.total_reviews != blank %}
            <div class="luxury-testimonials__trust-stat">
              <span
                style="
                  color: {{ section.settings.trust_stat_number_color }};
                  font-size: {{ section.settings.trust_stat_number_size }}px;
                  font-weight: {{ section.settings.trust_stat_number_weight }};
                "
              >
                {{ section.settings.total_reviews }}
              </span>
              <span
                style="
                  color: {{ section.settings.trust_stat_label_color }};
                  font-size: {{ section.settings.trust_stat_label_size }}px;
                  margin-left: {{ section.settings.trust_stat_spacing }}px;
                "
              >
                {{ section.settings.total_reviews_label | default: 'Reviews' }}
              </span>
            </div>
          {% endif %}

          {% if section.settings.average_rating != blank %}
            <div class="luxury-testimonials__trust-stat">
              <span
                style="
                  color: {{ section.settings.trust_stat_number_color }};
                  font-size: {{ section.settings.trust_stat_number_size }}px;
                  font-weight: {{ section.settings.trust_stat_number_weight }};
                "
              >
                {{ section.settings.average_rating }}
              </span>
              <span
                style="
                  color: {{ section.settings.trust_stat_label_color }};
                  font-size: {{ section.settings.trust_stat_label_size }}px;
                  margin-left: {{ section.settings.trust_stat_spacing }}px;
                "
              >
                {{ section.settings.average_rating_label | default: 'Average Rating' }}
              </span>
            </div>
          {% endif %}

          {% if section.settings.satisfaction_rate != blank %}
            <div class="luxury-testimonials__trust-stat">
              <span
                style="
                  color: {{ section.settings.trust_stat_number_color }};
                  font-size: {{ section.settings.trust_stat_number_size }}px;
                  font-weight: {{ section.settings.trust_stat_number_weight }};
                "
              >
                {{ section.settings.satisfaction_rate }}
              </span>
              <span
                style="
                  color: {{ section.settings.trust_stat_label_color }};
                  font-size: {{ section.settings.trust_stat_label_size }}px;
                  margin-left: {{ section.settings.trust_stat_spacing }}px;
                "
              >
                {{ section.settings.satisfaction_rate_label | default: 'Satisfaction' }}
              </span>
            </div>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .luxury-testimonials__container {
    margin: 0 auto;
  }

  .luxury-testimonials__item:hover {
    transform: {{ section.settings.item_hover_transform }};
    box-shadow: {{ section.settings.item_hover_shadow }};
    transition: all {{ section.settings.item_hover_duration }}ms ease;
  }

  @media (min-width: 768px) {
    .luxury-testimonials__grid {
      grid-template-columns: repeat({{ section.settings.grid_columns_tablet }}, 1fr) !important;
    }
  }

  @media (min-width: 1024px) {
    .luxury-testimonials__grid {
      grid-template-columns: repeat({{ section.settings.grid_columns_desktop }}, 1fr) !important;
    }
  }

  @media (max-width: 768px) {
    .luxury-testimonials__trust-stats {
      flex-direction: column !important;
    }
  }
</style>

