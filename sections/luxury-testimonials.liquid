  "tag": "section",
  "class": "section-luxury-testimonials",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "section_padding_y",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Section vertical padding",
      "default": 80
    },
    {
      "type": "range",
      "id": "section_padding_x",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Section horizontal padding",
      "default": 24
    },
    {
      "type": "range",
      "id": "container_max_width",
      "min": 800,
      "max": 1400,
      "step": 50,
      "unit": "px",
      "label": "Container max width",
      "default": 1200
