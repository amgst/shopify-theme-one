      ],
      "default": "solid"
    },
    {
      "type": "color",
      "id": "bg_color_solid",
      "label": "Background color (solid)",
      "default": "#f9fafb"
    },
    {
      "type": "color",
      "id": "bg_color_start",
      "label": "Background gradient start",
      "default": "#f9fafb"
    },
    {
      "type": "color",
      "id": "bg_color_end",
      "label": "Background gradient end",
      "default": "#ffffff"
    },
    {
      "type": "select",
      "id": "gradient_direction",
      "label": "Gradient direction",
      "options": [
        { "value": "135deg", "label": "Diagonal (135°)" },
        { "value": "180deg", "label": "Top to bottom" },
        { "value": "90deg", "label": "Left to right" }
      ],
      "default": "180deg"
    },
    {
      "type": "header",
      "content": "Header"
    },
    {
      "type": "checkbox",
