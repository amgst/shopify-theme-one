<!-- sections/luxury-hero.liquid -->
<section class="luxury-hero">
  {% if section.settings.bg_type == 'image' and section.settings.background_image != blank %}
    <div class="luxury-hero__background">
      {{
        section.settings.background_image
        | image_url: width: 1920
        | image_tag: loading: 'lazy', class: 'luxury-hero__bg-image', alt: section.settings.background_image.alt
        | default: section.settings.heading
      }}
      <div class="luxury-hero__overlay"></div>
    </div>
  {% endif %}

  <div class="luxury-hero__container">
    <div class="luxury-hero__content" style="text-align: {{ section.settings.content_alignment }};">
      {% if section.settings.show_badge and section.settings.badge_text != blank %}
        <div
          class="luxury-hero__badge"
          style="
            {% if section.settings.badge_bg_type == 'solid' %}
              background: {{ section.settings.badge_bg_color }};
            {% else %}
              background: {{ 'linear-gradient(135deg, '
                | append: section.settings.badge_bg_start
                | append: ' 0%, '
                | append: section.settings.badge_bg_end
                | append: ' 100%)' }};
            {% endif %}
            color: {{ section.settings.badge_text_color }};
            border: {{ section.settings.badge_border_width }}px solid {{ section.settings.badge_border_color }};
            border-radius: {{ section.settings.badge_border_radius }}px;
            {% if section.settings.badge_blur %}
              backdrop-filter: blur(12px);
            {% else %}
              backdrop-filter: none;
            {% endif %}
          "
        >
          {{ section.settings.badge_text | escape }}
        </div>
      {% endif %}

      {% if section.settings.eyebrow_text != blank %}
        <div
          class="luxury-hero__eyebrow"
          style="
            color: {{ section.settings.eyebrow_color }};
            font-size: {{ section.settings.eyebrow_size }}px;
            font-weight: {{ section.settings.eyebrow_weight }};
            letter-spacing: {{ section.settings.eyebrow_spacing }}em;
            text-transform: {{ section.settings.eyebrow_transform }};
            margin-bottom: {{ section.settings.eyebrow_margin }}px;
          "
        >
          {{ section.settings.eyebrow_text | escape }}
        </div>
      {% endif %}

      {% if section.settings.heading != blank %}
        <{{ section.settings.heading_tag }}
          class="luxury-hero__heading"
          style="
            color: {{ section.settings.heading_color }};
            font-size: {{ section.settings.heading_size }}px;
            font-weight: {{ section.settings.heading_weight }};
            line-height: {{ section.settings.heading_line_height }};
            letter-spacing: {{ section.settings.heading_spacing }}em;
            text-transform: {{ section.settings.heading_transform }};
            margin-bottom: {{ section.settings.heading_margin }}px;
          "
        >
          {{ section.settings.heading | newline_to_br }}
        </{{ section.settings.heading_tag }}>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <div
          class="luxury-hero__subheading"
          style="
            color: {{ section.settings.subheading_color }};
            font-size: {{ section.settings.subheading_size }}px;
            font-weight: {{ section.settings.subheading_weight }};
            line-height: {{ section.settings.subheading_line_height }};
            letter-spacing: {{ section.settings.subheading_spacing }}em;
            margin-bottom: {{ section.settings.subheading_margin }}px;
            max-width: {{ section.settings.subheading_max_width }}px;
          "
        >
          {{ section.settings.subheading | escape }}
        </div>
      {% endif %}

      {% if section.settings.description != blank %}
        <div
          class="luxury-hero__description"
          style="
            color: {{ section.settings.description_color }};
            font-size: {{ section.settings.description_size }}px;
            font-weight: {{ section.settings.description_weight }};
            line-height: {{ section.settings.description_line_height }};
            margin-bottom: {{ section.settings.description_margin }}px;
            max-width: {{ section.settings.description_max_width }}px;
          "
        >
          {{ section.settings.description | escape }}
        </div>
      {% endif %}

      {% if section.settings.show_buttons %}
        <div class="luxury-hero__buttons" style="gap: {{ section.settings.button_spacing }}px;">
          {% if section.settings.button_primary_text != blank %}
            <a
              href="{{ section.settings.button_primary_link | default: '#' }}"
              class="luxury-hero__button luxury-hero__button--primary"
              style="
                {% if section.settings.primary_btn_bg_type == 'solid' %}
                  background: {{ section.settings.primary_btn_bg }};
                {% else %}
                  background: {{ 'linear-gradient(135deg, '
                    | append: section.settings.primary_btn_bg_start
                    | append: ' 0%, '
                    | append: section.settings.primary_btn_bg_end
                    | append: ' 100%)' }};
                {% endif %}
                color: {{ section.settings.primary_btn_text_color }};
                border: {{ section.settings.primary_btn_border_width }}px solid {{ section.settings.primary_btn_border_color }};
                border-radius: {{ section.settings.primary_btn_border_radius }}px;
                padding: {{ section.settings.primary_btn_padding_y }}px {{ section.settings.primary_btn_padding_x }}px;
                font-size: {{ section.settings.primary_btn_font_size }}px;
                font-weight: {{ section.settings.primary_btn_font_weight }};
                letter-spacing: {{ section.settings.primary_btn_letter_spacing }}em;
                text-transform: {{ section.settings.primary_btn_text_transform }};
              "
            >
              {{ section.settings.button_primary_text | escape }}
            </a>
          {% endif %}

          {% if section.settings.button_secondary_text != blank %}
            <a
              href="{{ section.settings.button_secondary_link | default: '#' }}"
              class="luxury-hero__button luxury-hero__button--secondary"
              style="
                {% if section.settings.secondary_btn_bg_type == 'solid' %}
                  background: {{ section.settings.secondary_btn_bg }};
                {% else %}
                  background: {{ 'linear-gradient(135deg, '
                    | append: section.settings.secondary_btn_bg_start
                    | append: ' 0%, '
                    | append: section.settings.secondary_btn_bg_end
                    | append: ' 100%)' }};
                {% endif %}
                color: {{ section.settings.secondary_btn_text_color }};
                border: {{ section.settings.secondary_btn_border_width }}px solid {{ section.settings.secondary_btn_border_color }};
                border-radius: {{ section.settings.secondary_btn_border_radius }}px;
                padding: {{ section.settings.secondary_btn_padding_y }}px {{ section.settings.secondary_btn_padding_x }}px;
                font-size: {{ section.settings.secondary_btn_font_size }}px;
                font-weight: {{ section.settings.secondary_btn_font_weight }};
                letter-spacing: {{ section.settings.secondary_btn_letter_spacing }}em;
                text-transform: {{ section.settings.secondary_btn_text_transform }};
              "
            >
              {{ section.settings.button_secondary_text | escape }}
            </a>
          {% endif %}
        </div>
      {% endif %}

      {% if section.blocks.size > 0 %}
        <div class="luxury-hero__features" style="margin-top: {{ section.settings.features_margin_top }}px;">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'feature' %}
                <div
                  class="luxury-hero__feature"
                  {{ block.shopify_attributes }}
                  style="color: {{ block.settings.text_color }};"
                >
                  {% if block.settings.icon_type == 'dot' %}
                    <div
                      class="luxury-hero__feature-dot"
                      style="
                        background-color: {{ block.settings.dot_color }};
                        width: {{ block.settings.dot_size }}px;
                        height: {{ block.settings.dot_size }}px;
                      "
                    ></div>
                  {% elsif block.settings.icon_type == 'svg' and block.settings.svg_code != blank %}
                    <div
                      class="luxury-hero__feature-svg"
                      style="width: {{ block.settings.icon_size }}px; height: {{ block.settings.icon_size }}px; color: {{ block.settings.icon_color }};"
                    >
                      {{ block.settings.svg_code }}
                    </div>
                  {% endif %}
                  <span style="font-size: {{ block.settings.font_size }}px; font-weight: {{ block.settings.font_weight }};">
                    {{ block.settings.text | escape }}
                  </span>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>

  {% if section.settings.show_scroll_indicator %}
    <div
      class="luxury-hero__scroll-indicator"
      style="color: {{ section.settings.scroll_indicator_color }};"
    >
      <span style="font-size: {{ section.settings.scroll_text_size }}px;">
        {{ section.settings.scroll_text | default: 'Scroll to discover' }}
      </span>
      <div
        class="luxury-hero__scroll-line"
        style="
          background: linear-gradient(to bottom, {{ section.settings.scroll_indicator_color }}, transparent);
          height: {{ section.settings.scroll_line_height }}px;
        "
      ></div>
    </div>
  {% endif %}
</section>

<style>
  .luxury-hero {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .luxury-hero__background {
    position: absolute;
    inset: 0;
  }

  .luxury-hero__bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .luxury-hero__overlay {
    position: absolute;
    inset: 0;
  }

  .luxury-hero__container {
    position: relative;
    z-index: 10;
    width: 100%;
    max-width: {{ section.settings.container_max_width }}px;
    margin: 0 auto;
    padding: {{ section.settings.container_padding_y }}px {{ section.settings.container_padding_x }}px;
  }

  .luxury-hero__content > * {
    margin-left: auto;
    margin-right: auto;
  }

  .luxury-hero__badge {
    display: inline-flex;
    align-items: center;
    padding: {{ section.settings.badge_padding_y }}px {{ section.settings.badge_padding_x }}px;
    font-size: {{ section.settings.badge_font_size }}px;
    font-weight: {{ section.settings.badge_font_weight }};
    letter-spacing: {{ section.settings.badge_letter_spacing }}em;
    text-transform: {{ section.settings.badge_text_transform }};
    margin-bottom: {{ section.settings.badge_margin }}px;
  }

  .luxury-hero__eyebrow {
    margin-bottom: {{ section.settings.eyebrow_margin }}px;
  }

  .luxury-hero__heading {
    margin-bottom: {{ section.settings.heading_margin }}px;
  }

  .luxury-hero__subheading {
    margin-bottom: {{ section.settings.subheading_margin }}px;
  }

  .luxury-hero__description {
    margin-bottom: {{ section.settings.description_margin }}px;
  }

  .luxury-hero__buttons {
    display: flex;
    flex-direction: {{ section.settings.button_direction }};
    align-items: center;
    justify-content: {{ section.settings.button_alignment }};
    flex-wrap: wrap;
  }

  .luxury-hero__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all {{ section.settings.button_transition_duration }}ms ease;
    cursor: pointer;
  }

  .luxury-hero__button:hover {
    transform: {{ section.settings.button_hover_transform }};
    box-shadow: {{ section.settings.button_hover_shadow }};
  }

  .luxury-hero__features {
    display: flex;
    flex-direction: {{ section.settings.features_direction }};
    align-items: center;
    justify-content: {{ section.settings.features_alignment }};
    gap: {{ section.settings.features_gap }}px;
    flex-wrap: wrap;
  }

  .luxury-hero__feature {
    display: flex;
    align-items: center;
    gap: {{ section.settings.feature_icon_gap }}px;
  }

  .luxury-hero__feature-dot {
    border-radius: 50%;
    flex-shrink: 0;
  }

  .luxury-hero__feature-svg {
    flex-shrink: 0;
  }

  .luxury-hero__scroll-indicator {
    position: absolute;
    bottom: {{ section.settings.scroll_indicator_bottom }}px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: {{ section.settings.scroll_indicator_gap }}px;
  }

  .luxury-hero__scroll-line {
    width: 1px;
  }

  @media (max-width: 768px) {
    .luxury-hero__buttons {
      flex-direction: column;
    }

    .luxury-hero__features {
      flex-direction: column;
    }
  }
</style>

