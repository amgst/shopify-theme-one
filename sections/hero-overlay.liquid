{% comment %}
  Image Overlay Hero Section
{% endcomment %}

<section class="hero-overlay">
  <div class="hero-overlay__background">
    {% if section.settings.background_image != blank %}
      {{
        section.settings.background_image
        | image_url: width: 1920
        | image_tag: loading: 'lazy', class: 'hero-overlay__bg-image', alt: section.settings.background_image.alt
        | default: section.settings.heading
      }}
    {% else %}
      <div class="hero-overlay__bg-placeholder">
        <div class="hero-overlay__placeholder-content">
          <svg width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
            <circle cx="8.5" cy="8.5" r="1.5"/>
            <polyline points="21,15 16,10 5,21"/>
          </svg>
          <p>Add a background image</p>
        </div>
      </div>
    {% endif %}

    <div
      class="hero-overlay__overlay"
      style="
        background: linear-gradient(to top,
        rgba(0,0,0,{{ section.settings.overlay_opacity_bottom }}),
        rgba(0,0,0,{{ section.settings.overlay_opacity_middle }}) 50%,
        rgba(0,0,0,{{ section.settings.overlay_opacity_top }}));
      "
    ></div>
  </div>

  <div class="hero-overlay__content">
    <div class="hero-overlay__container">
      {% if section.settings.badge_text != blank %}
        <div class="hero-overlay__badge">
          {{ section.settings.badge_text | escape }}
        </div>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h1 class="hero-overlay__heading">
          {{ section.settings.heading | newline_to_br }}
        </h1>
      {% endif %}

      {% if section.settings.description != blank %}
        <p class="hero-overlay__description">
          {{ section.settings.description | escape }}
        </p>
      {% endif %}

      {% if section.settings.button_primary_text != blank or section.settings.button_secondary_text != blank %}
        <div class="hero-overlay__buttons">
          {% if section.settings.button_primary_text != blank %}
            <a
              href="{{ section.settings.button_primary_link | default: '#' }}"
              class="hero-overlay__button hero-overlay__button--primary"
              style="background-color: {{ section.settings.primary_button_bg }}; color: {{ section.settings.primary_button_text }};"
            >
              {{ section.settings.button_primary_text | escape }}
            </a>
          {% endif %}

          {% if section.settings.button_secondary_text != blank %}
            <a
              href="{{ section.settings.button_secondary_link | default: '#' }}"
              class="hero-overlay__button hero-overlay__button--secondary"
            >
              {{ section.settings.button_secondary_text | escape }}
            </a>
          {% endif %}
        </div>
      {% endif %}
    </div>

    {% if section.settings.show_scroll_indicator %}
      <div class="hero-overlay__scroll-indicator">
        <span>{{ section.settings.scroll_text | default: 'Scroll to explore' }}</span>
        <div class="hero-overlay__scroll-line"></div>
      </div>
    {% endif %}
  </div>

  {% if section.settings.show_floating_elements %}
    <div class="hero-overlay__floating-elements">
      <div class="hero-overlay__floating-dot hero-overlay__floating-dot--1"></div>
      <div class="hero-overlay__floating-dot hero-overlay__floating-dot--2"></div>
      <div class="hero-overlay__floating-dot hero-overlay__floating-dot--3"></div>
    </div>
  {% endif %}
</section>

<style>
  .hero-overlay {
    position: relative;
    min-height: {{ section.settings.section_height }}vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-overlay__background {
    position: absolute;
    inset: 0;
  }

  .hero-overlay__bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay__bg-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-overlay__placeholder-content {
    text-align: center;
    color: rgba(255,255,255,0.8);
  }

  .hero-overlay__placeholder-content svg {
    margin: 0 auto 1rem;
  }

  .hero-overlay__overlay {
    position: absolute;
    inset: 0;
  }

  .hero-overlay__content {
    position: relative;
    z-index: 10;
    width: 100%;
    max-width: 64rem;
    margin: 0 auto;
    text-align: center;
    padding: 4rem 1.5rem;
    color: white;
  }

  .hero-overlay__container {
    margin-bottom: 2rem;
  }

  .hero-overlay__badge {
    display: inline-flex;
    align-items: center;
    padding: 1rem 1.5rem;
    border-radius: 9999px;
    background: rgba(255,255,255,0.1);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255,255,255,0.2);
    color: rgba(255,255,255,0.9);
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
  }

  .hero-overlay__heading {
    font-size: clamp(2.5rem, 8vw, 5rem);
    line-height: 1.2;
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .hero-overlay__description {
    font-size: clamp(1.125rem, 3vw, 1.5rem);
    line-height: 1.6;
    color: rgba(255,255,255,0.9);
    max-width: 32rem;
    margin: 0 auto 2rem;
  }

  .hero-overlay__buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  .hero-overlay__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: .5rem 2rem;
    border-radius: 9999px;
    font-size: 1.125rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    min-width: 200px;
  }

  .hero-overlay__button--primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.25);
  }

  .hero-overlay__button--secondary {
    background: transparent;
    border: 2px solid rgba(255,255,255,0.3);
    color: white;
  }

  .hero-overlay__button--secondary:hover {
    background: rgba(255,255,255,0.1);
    color: white;
  }

  .hero-overlay__scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255,255,255,0.7);
    font-size: 0.875rem;
  }

  .hero-overlay__scroll-line {
    width: 1px;
    height: 2rem;
    background: linear-gradient(to bottom, rgba(255,255,255,0.7), transparent);
  }

  .hero-overlay__floating-elements {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 5;
  }

  .hero-overlay__floating-dot {
    position: absolute;
    background: rgba(255,255,255,0.2);
    border-radius: 50%;
    animation: float 3s ease-in-out infinite;
  }

  .hero-overlay__floating-dot--1 {
    top: 5rem;
    left: 5rem;
    width: 1rem;
    height: 1rem;
  }

  .hero-overlay__floating-dot--2 {
    top: 10rem;
    right: 8rem;
    width: 0.5rem;
    height: 0.5rem;
    animation-delay: 1s;
  }

  .hero-overlay__floating-dot--3 {
    bottom: 8rem;
    left: 4rem;
    width: 0.75rem;
    height: 0.75rem;
    animation-delay: 0.5s;
  }

  @keyframes float {
    0%, 100% { opacity: 0.2; transform: translateY(0); }
    50% { opacity: 0.4; transform: translateY(-10px); }
  }

  @media (min-width: 640px) {
    .hero-overlay__buttons {
      flex-direction: row;
      justify-content: center;
    }
  }

  @media (max-width: 768px) {
    .hero-overlay__floating-elements {
      display: none;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Overlay",
  "tag": "section",
  "class": "section-hero-overlay",
  "settings": [
    {
      "type": "range",
      "id": "section_height",
      "min": 70,
      "max": 120,
      "step": 10,
      "unit": "vh",
      "label": "Section height",
      "default": 100
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "range",
      "id": "overlay_opacity_top",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Overlay opacity (top)",
      "default": 0
    },
    {
      "type": "range",
      "id": "overlay_opacity_middle",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Overlay opacity (middle)",
      "default": 0.2
    },
    {
      "type": "range",
      "id": "overlay_opacity_bottom",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Overlay opacity (bottom)",
      "default": 0.6
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "Limited Time Offer"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Elevate Your\nEveryday Moments"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover products that bring joy to your daily routine. Quality crafted, thoughtfully designed."
    },
    {
      "type": "header",
      "content": "Buttons"
    },
    {
      "type": "text",
      "id": "button_primary_text",
      "label": "Primary button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_primary_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "button_secondary_text",
      "label": "Secondary button text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_secondary_link",
      "label": "Secondary button link"
    },
    {
      "type": "color",
      "id": "primary_button_bg",
      "label": "Primary button background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "primary_button_text",
      "label": "Primary button text",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Elements"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "Show scroll indicator",
      "default": true
    },
    {
      "type": "text",
      "id": "scroll_text",
      "label": "Scroll indicator text",
      "default": "Scroll to explore"
    },
    {
      "type": "checkbox",
      "id": "show_floating_elements",
      "label": "Show floating elements",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Hero Overlay"
    }
  ]
}
{% endschema %}
