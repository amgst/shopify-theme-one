{% comment %}
  Minimal Hero Section
{% endcomment %}

<section class="hero-minimal" style="background-color: {{ section.settings.bg_color }};">
  <div class="hero-minimal__container">
    <div class="hero-minimal__content">
      <div class="hero-minimal__top-section">
        <div class="hero-minimal__header">
          <div class="hero-minimal__accent-line" style="background-color: {{ section.settings.accent_color }};"></div>

          {% if section.settings.heading != blank %}
            <h1 class="hero-minimal__heading" style="color: {{ section.settings.text_color }};">
              {{ section.settings.heading | escape }}
            </h1>
          {% endif %}

          {% if section.settings.description != blank %}
            <p class="hero-minimal__description" style="color: {{ section.settings.text_color }};">
              {{ section.settings.description | escape }}
            </p>
          {% endif %}
        </div>

        {% if section.settings.button_text != blank %}
          <a
            href="{{ section.settings.button_link | default: '#' }}"
            class="hero-minimal__button"
            style="border-color: {{ section.settings.button_border }}; color: {{ section.settings.button_text_color }};"
          >
            {{ section.settings.button_text | escape }}
          </a>
        {% endif %}
      </div>

      <div class="hero-minimal__image-section">
        {% if section.settings.main_image != blank %}
          <div class="hero-minimal__image-wrapper">
            {{
              section.settings.main_image
              | image_url: width: 1200
              | image_tag: loading: 'lazy', class: 'hero-minimal__image', alt: section.settings.main_image.alt
              | default: section.settings.heading
            }}
          </div>
        {% else %}
          <div class="hero-minimal__image-placeholder">
            <div class="hero-minimal__placeholder-content">
              <svg width="100" height="100" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                <circle cx="8.5" cy="8.5" r="1.5"/>
                <polyline points="21,15 16,10 5,21"/>
              </svg>
              <p>Add a main image</p>
            </div>
          </div>
        {% endif %}

        {% if section.settings.show_floating_cards %}
          <div class="hero-minimal__floating-card hero-minimal__floating-card--left">
            <div class="hero-minimal__card-subtitle" style="color: {{ section.settings.text_color }};">
              {{ section.settings.card_left_subtitle | default: 'Est. 2024' }}
            </div>
            <div class="hero-minimal__card-title" style="color: {{ section.settings.text_color }};">
              {{ section.settings.card_left_title | default: 'Premium Brand' }}
            </div>
          </div>

          <div class="hero-minimal__floating-card hero-minimal__floating-card--right">
            <div class="hero-minimal__card-subtitle" style="color: {{ section.settings.text_color }};">
              {{ section.settings.card_right_subtitle | default: 'Worldwide' }}
            </div>
            <div class="hero-minimal__card-title" style="color: {{ section.settings.text_color }};">
              {{ section.settings.card_right_title | default: 'Free Delivery' }}
            </div>
          </div>
        {% endif %}
      </div>

      {% if section.blocks.size > 0 %}
        <div class="hero-minimal__features">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'feature' %}
                <div class="hero-minimal__feature" {{ block.shopify_attributes }}>
                  <div
                    class="hero-minimal__feature-icon"
                    style="background-color: {{ section.settings.accent_color }}20;"
                  >
                    <div
                      class="hero-minimal__feature-dot"
                      style="background-color: {{ section.settings.accent_color }};"
                    ></div>
                  </div>
                  <h3 class="hero-minimal__feature-title" style="color: {{ section.settings.text_color }};">
                    {{ block.settings.title | escape }}
                  </h3>
                  <p class="hero-minimal__feature-description" style="color: {{ section.settings.text_color }};">
                    {{ block.settings.description | escape }}
                  </p>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .hero-minimal {
    min-height: {{ section.settings.section_height }}vh;
    padding: 4rem 0;
  }

  .hero-minimal__container {
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 1.5rem;
    min-height: 80vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .hero-minimal__content {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .hero-minimal__top-section {
    text-align: center;
  }

  .hero-minimal__header {
    margin-bottom: 2rem;
  }

  .hero-minimal__accent-line {
    width: 4rem;
    height: 1px;
    margin: 0 auto 1rem;
  }

  .hero-minimal__heading {
    font-size: clamp(1.875rem, 5vw, 3rem);
    line-height: 1.4;
    letter-spacing: 0.025em;
    margin-bottom: 1rem;
    max-width: 32rem;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-minimal__description {
    font-size: 1.125rem;
    line-height: 1.6;
    max-width: 32rem;
    margin: 0 auto;
    opacity: 0.8;
  }

  .hero-minimal__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: .5rem 2rem;
    border: 2px solid;
    background: transparent;
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
    min-width: 200px;
  }

  .hero-minimal__button:hover {
    background-color: currentColor;
    color: white !important;
  }

  .hero-minimal__image-section {
    position: relative;
    max-width: 48rem;
    margin: 0 auto;
  }

  .hero-minimal__image-wrapper {
    aspect-ratio: 4/3;
    position: relative;
  }

  .hero-minimal__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-minimal__image-placeholder {
    aspect-ratio: 4/3;
    background-color: #f9fafb;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-minimal__placeholder-content {
    text-align: center;
    color: #9ca3af;
  }

  .hero-minimal__placeholder-content svg {
    margin: 0 auto 1rem;
  }

  .hero-minimal__floating-card {
    position: absolute;
    background: white;
    padding: 1.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(0, 0, 0, 0.05);
    min-width: 140px;
  }

  .hero-minimal__floating-card--left {
    top: -2rem;
    left: -2rem;
  }

  .hero-minimal__floating-card--right {
    bottom: -2rem;
    right: -2rem;
  }

  .hero-minimal__card-subtitle {
    font-size: 0.875rem;
    opacity: 0.8;
    margin-bottom: 0.25rem;
  }

  .hero-minimal__card-title {
    font-size: 1.25rem;
    font-weight: 500;
  }

  .hero-minimal__features {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    text-align: center;
  }

  .hero-minimal__feature {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .hero-minimal__feature-icon {
    width: 2rem;
    height: 2rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 0.5rem;
  }

  .hero-minimal__feature-dot {
    width: 0.5rem;
    height: 0.5rem;
    border-radius: 50%;
  }

  .hero-minimal__feature-title {
    font-size: 1.125rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
  }

  .hero-minimal__feature-description {
    font-size: 0.875rem;
    line-height: 1.5;
    opacity: 0.8;
    max-width: 20rem;
  }

  @media (min-width: 768px) {
    .hero-minimal__features {
      grid-template-columns: repeat(3, 1fr);
    }

    .hero-minimal__floating-card--left {
      top: -2rem;
      left: -2rem;
    }

    .hero-minimal__floating-card--right {
      bottom: -2rem;
      right: -2rem;
    }
  }

  @media (max-width: 640px) {
    .hero-minimal__floating-card {
      display: none;
    }
  }
</style>

