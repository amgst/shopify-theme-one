<section class="py-16 lg:py-20">
  <div class="container mx-auto px-4">
    <div class="relative overflow-hidden {% if section.settings.full_width %}mx-0 -mx-4{% else %}max-w-4xl mx-auto{% endif %} bg-gradient-to-br from-blue-500 via-purple-600 to-purple-700 rounded-3xl {% if section.settings.full_width %}lg:rounded-none{% endif %} p-8 lg:p-16 text-center text-white">
      {%- if section.settings.background_image != blank -%}
        <div class="absolute inset-0 z-0">
          <img
            src="{{ section.settings.background_image | image_url: width: 1920 }}"
            alt="{{ section.settings.background_image.alt | escape }}"
            loading="lazy"
            width="{{ section.settings.background_image.width }}"
            height="{{ section.settings.background_image.height }}"
            class="w-full h-full object-cover opacity-30"
          >
        </div>
      {%- endif -%}
      
      <div class="relative z-10 max-w-2xl mx-auto">
        {%- if section.settings.title != blank -%}
          <h2 class="text-3xl lg:text-4xl xl:text-5xl font-light tracking-tight mb-4">
            {{ section.settings.title }}
          </h2>
        {%- endif -%}
        
        {%- if section.settings.description != blank -%}
          <div class="text-lg lg:text-xl mb-8 opacity-90">
            {{ section.settings.description }}
          </div>
        {%- endif -%}
        
        {%- form 'customer', class: 'mb-8' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="space-y-4">
            <div class="flex flex-col sm:flex-row gap-3 p-2 bg-white bg-opacity-10 backdrop-blur-sm border border-white border-opacity-20 rounded-full transition-all duration-300 focus-within:bg-opacity-15 focus-within:border-opacity-40 focus-within:shadow-lg focus-within:shadow-white/10">
              <input
                id="NewsletterForm--{{ section.id }}"
                type="email"
                name="contact[email]"
                class="flex-1 bg-transparent border-none px-6 py-4 text-white placeholder-white placeholder-opacity-70 text-base outline-none"
                value="{{ form.email }}"
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                {% if form.errors %}
                  autofocus
                  aria-invalid="true"
                  aria-describedby="Newsletter-error--{{ section.id }}"
                {% elsif form.posted_successfully? %}
                  aria-describedby="Newsletter-success--{{ section.id }}"
                {% endif %}
                placeholder="{{ section.settings.email_placeholder }}"
                required
              >
              <button
                type="submit"
                class="bg-white text-blue-600 px-6 py-4 rounded-full font-semibold text-base hover:bg-opacity-90 transition-all duration-300 hover:translate-x-1 flex items-center gap-2 whitespace-nowrap group"
                name="commit"
                id="Subscribe"
                aria-label="{{ section.settings.button_label }}"
              >
                <span class="hidden sm:inline">{{ section.settings.button_label }}</span>
                <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
              </button>
            </div>
            
            {%- if form.errors -%}
              <div class="flex items-center gap-2 p-3 bg-red-500 bg-opacity-10 border border-red-500 border-opacity-20 rounded-lg text-red-200 text-sm" id="Newsletter-error--{{ section.id }}">
                <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                </svg>
                {{- form.errors.translated_fields.email | capitalize }}
                {{- form.errors.messages.email -}}
              </div>
            {%- endif -%}
          </div>
          
          {%- if form.posted_successfully? -%}
            <div
              class="flex items-center gap-2 p-4 bg-green-500 bg-opacity-10 border border-green-500 border-opacity-20 rounded-lg text-green-200 mt-4"
              id="Newsletter-success--{{ section.id }}"
              tabindex="-1"
              autofocus
            >
              <svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
              </svg>
              {{- section.settings.success_message -}}
            </div>
          {%- endif -%}
        {%- endform -%}
        
        {%- if section.settings.show_social_links -%}
          <div class="space-y-4">
            <p class="text-sm opacity-80">{{ section.settings.social_text }}</p>
            <div class="flex justify-center gap-4">
              {%- if settings.social_twitter_link != blank -%}
                <a href="{{ settings.social_twitter_link }}" class="w-10 h-10 bg-white bg-opacity-10 hover:bg-opacity-20 rounded-full flex items-center justify-center transition-all duration-300 hover:-translate-y-0.5 text-white">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                  <span class="sr-only">{{ 'general.social.links.twitter' | t }}</span>
                </a>
              {%- endif -%}
              {%- if settings.social_facebook_link != blank -%}
                <a href="{{ settings.social_facebook_link }}" class="w-10 h-10 bg-white bg-opacity-10 hover:bg-opacity-20 rounded-full flex items-center justify-center transition-all duration-300 hover:-translate-y-0.5 text-white">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                  <span class="sr-only">{{ 'general.social.links.facebook' | t }}</span>
                </a>
              {%- endif -%}
              {%- if settings.social_instagram_link != blank -%}
                <a href="{{ settings.social_instagram_link }}" class="w-10 h-10 bg-white bg-opacity-10 hover:bg-opacity-20 rounded-full flex items-center justify-center transition-all duration-300 hover:-translate-y-0.5 text-white">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.448-.49-3.323-1.297C4.198 14.895 3.708 13.744 3.708 12.447s.49-2.448 1.297-3.323c.875-.807 2.026-1.297 3.323-1.297s2.448.49 3.323 1.297c.807.875 1.297 2.026 1.297 3.323s-.49 2.448-1.297 3.323c-.875.807-2.026 1.297-3.323 1.297zm7.718-9.469c-.49 0-.875-.385-.875-.875s.385-.875.875-.875.875.385.875.875-.385.875-.875.875zm-3.718 5.929c0-1.297-.49-2.448-1.297-3.323-.875-.807-2.026-1.297-3.323-1.297s-2.448.49-3.323 1.297c-.807.875-1.297 2.026-1.297 3.323s.49 2.448 1.297 3.323c.875.807 2.026 1.297 3.323 1.297s2.448-.49 3.323-1.297c.807-.875 1.297-2.026 1.297-3.323z"/>
                  </svg>
                  <span class="sr-only">{{ 'general.social.links.instagram' | t }}</span>
                </a>
              {%- endif -%}
              {%- if settings.social_youtube_link != blank -%}
                <a href="{{ settings.social_youtube_link }}" class="w-10 h-10 bg-white bg-opacity-10 hover:bg-opacity-20 rounded-full flex items-center justify-center transition-all duration-300 hover:-translate-y-0.5 text-white">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                  </svg>
                  <span class="sr-only">{{ 'general.social.links.youtube' | t }}</span>
                </a>
              {%- endif -%}
              {%- if settings.social_tiktok_link != blank -%}
                <a href="{{ settings.social_tiktok_link }}" class="w-10 h-10 bg-white bg-opacity-10 hover:bg-opacity-20 rounded-full flex items-center justify-center transition-all duration-300 hover:-translate-y-0.5 text-white">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
                  </svg>
                  <span class="sr-only">{{ 'general.social.links.tiktok' | t }}</span>
                </a>
              {%- endif -%}
              {%- if settings.social_pinterest_link != blank -%}
                <a href="{{ settings.social_pinterest_link }}" class="w-10 h-10 bg-white bg-opacity-10 hover:bg-opacity-20 rounded-full flex items-center justify-center transition-all duration-300 hover:-translate-y-0.5 text-white">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.097.118.112.221.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146C9.57 23.812 10.763 24.009 12.017 24.009c6.624.003 11.99-5.367 11.99-11.988C24.007 5.369 18.641.001.12.017.001z"/>
                  </svg>
                  <span class="sr-only">{{ 'general.social.links.pinterest' | t }}</span>
                </a>
              {%- endif -%}
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "WB Newsletter Signup",
  "tag": "section",
  "class": "wb-newsletter-signup",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Stay in the Loop"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Subscribe to our newsletter for exclusive offers, style tips, and the latest updates.</p>"
    },
    {
      "type": "text",
      "id": "email_placeholder",
      "label": "Email placeholder text",
      "default": "Enter your email address"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Subscribe"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Success message",
      "default": "Thanks for subscribing! You'll hear from us soon."
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Make section full width",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_social_links",
      "label": "Show social media links",
      "default": true
    },
    {
      "type": "text",
      "id": "social_text",
      "label": "Social media text",
      "default": "Follow us on social media"
    }
  ],
  "presets": [
    {
      "name": "WB Newsletter Signup"
    }
  ]
}
{% endschema %}