      "label": "Icon size",
      "default": 48
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon color",
      "default": "#6b7280"
    },
    {
      "type": "range",
      "id": "icon_border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Icon border radius",
      "default": 8
    },
    {
      "type": "range",
      "id": "icon_margin",
      "min": 16,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Icon bottom margin",
      "default": 24
    },
    {
      "type": "header",
      "content": "Eyebrow Text"
    },
    {
      "type": "text",
      "id": "eyebrow_text",
